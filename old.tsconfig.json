{
    "compileOnSave": true,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./lib",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "babel.config.js", "jest.config.js", ".eslintrc.js", "**/__tests__/*"]
}
